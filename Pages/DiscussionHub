import React, { useState, useEffect } from 'react';
import { Discussion } from '@/entities/Discussion';
import { Button } from '@/components/ui/button';
import { Card, CardContent, CardHeader, CardTitle } from '@/components/ui/card';
import { Input } from '@/components/ui/input';
import { Textarea } from '@/components/ui/textarea';
import { Badge } from '@/components/ui/badge';
import { Select, SelectContent, SelectItem, SelectTrigger, SelectValue } from '@/components/ui/select';
import { MessageCircle, Plus, Heart, MessageSquare, Search, Filter } from 'lucide-react';
import { motion } from 'framer-motion';

export default function DiscussionHubPage() {
  const [discussions, setDiscussions] = useState([]);
  const [showCreateForm, setShowCreateForm] = useState(false);
  const [newDiscussion, setNewDiscussion] = useState({
    title: '',
    content: '',
    category: '',
    tags: ''
  });
  const [searchTerm, setSearchTerm] = useState('');
  const [filterCategory, setFilterCategory] = useState('all');

  const categories = [
    'Career Advice',
    'Interview Tips', 
    'Salary Negotiation',
    'Industry Insights',
    'Job Search',
    'Networking'
  ];

  useEffect(() => {
    loadDiscussions();
  }, []);

  const loadDiscussions = async () => {
    const data = await Discussion.list('-created_date', 50);
    setDiscussions(data);
  };

  const createDiscussion = async () => {
    if (!newDiscussion.title.trim() || !newDiscussion.content.trim()) return;

    await Discussion.create({
      ...newDiscussion,
      author_name: 'Anonymous User',
      author_type: 'candidate',
      tags: newDiscussion.tags.split(',').map(t => t.trim()).filter(t => t)
    });

    setNewDiscussion({ title: '', content: '', category: '', tags: '' });
    setShowCreateForm(false);
    loadDiscussions();
  };

  const filteredDiscussions = discussions.filter(d => 
    (filterCategory === 'all' || d.category === filterCategory) &&
    (d.title.toLowerCase().includes(searchTerm.toLowerCase()) ||
     d.content.toLowerCase().includes(searchTerm.toLowerCase()))
  );

  return (
    <div className="min-h-screen p-4 md:p-8">
      <div className="max-w-6xl mx-auto">
        <motion.div
          initial={{ opacity: 0, y: 20 }}
          animate={{ opacity: 1, y: 0 }}
          className="flex justify-between items-center mb-8"
        >
          <div>
            <h1 className="text-3xl font-bold text-slate-800">Discussion Hub</h1>
            <p className="text-slate-600 mt-1">Connect, share knowledge, and grow together</p>
          </div>
          <Button onClick={() => setShowCreateForm(!showCreateForm)}>
            <Plus className="w-4 h-4 mr-2" />
            Start Discussion
          </Button>
        </motion.div>

        {/* Search and Filter */}
        <div className="flex flex-col md:flex-row gap-4 mb-6">
          <div className="relative flex-1">
            <Search className="absolute left-3 top-1/2 transform -translate-y-1/2 text-slate-400 w-4 h-4" />
            <Input
              placeholder="Search discussions..."
              value={searchTerm}
              onChange={(e) => setSearchTerm(e.target.value)}
              className="pl-10"
            />
          </div>
          <Select value={filterCategory} onValueChange={setFilterCategory}>
            <SelectTrigger className="w-48">
              <Filter className="w-4 h-4 mr-2" />
              <SelectValue placeholder="All Categories" />
            </SelectTrigger>
            <SelectContent>
              <SelectItem value="all">All Categories</SelectItem>
              {categories.map(cat => (
                <SelectItem key={cat} value={cat}>{cat}</SelectItem>
              ))}
            </SelectContent>
          </Select>
        </div>

        {/* Create Discussion Form */}
        {showCreateForm && (
          <motion.div
            initial={{ opacity: 0, height: 0 }}
            animate={{ opacity: 1, height: 'auto' }}
            exit={{ opacity: 0, height: 0 }}
          >
            <Card className="mb-6">
              <CardHeader>
                <CardTitle>Start a New Discussion</CardTitle>
              </CardHeader>
              <CardContent className="space-y-4">
                <Input
                  placeholder="Discussion title..."
                  value={newDiscussion.title}
                  onChange={(e) => setNewDiscussion({...newDiscussion, title: e.target.value})}
                />
                <Select
                  value={newDiscussion.category}
                  onValueChange={(value) => setNewDiscussion({...newDiscussion, category: value})}
                >
                  <SelectTrigger>
                    <SelectValue placeholder="Select category" />
                  </SelectTrigger>
                  <SelectContent>
                    {categories.map(cat => (
                      <SelectItem key={cat} value={cat}>{cat}</SelectItem>
                    ))}
                  </SelectContent>
                </Select>
                <Textarea
                  placeholder="Share your thoughts, questions, or insights..."
                  value={newDiscussion.content}
                  onChange={(e) => setNewDiscussion({...newDiscussion, content: e.target.value})}
                  rows={4}
                />
                <Input
                  placeholder="Tags (comma-separated)"
                  value={newDiscussion.tags}
                  onChange={(e) => setNewDiscussion({...newDiscussion, tags: e.target.value})}
                />
                <div className="flex gap-2">
                  <Button onClick={createDiscussion}>Post Discussion</Button>
                  <Button variant="outline" onClick={() => setShowCreateForm(false)}>
                    Cancel
                  </Button>
                </div>
              </CardContent>
            </Card>
          </motion.div>
        )}

        {/* Discussions List */}
        <div className="space-y-4">
          {filteredDiscussions.map((discussion, index) => (
            <motion.div
              key={discussion.id}
              initial={{ opacity: 0, y: 20 }}
              animate={{ opacity: 1, y: 0 }}
              transition={{ delay: index * 0.05 }}
            >
              <Card className="hover:shadow-lg transition-shadow cursor-pointer">
                <CardContent className="p-6">
                  <div className="flex justify-between items-start mb-3">
                    <div className="flex-1">
                      <h3 className="text-lg font-semibold text-slate-800 mb-2">
                        {discussion.title}
                      </h3>
                      <p className="text-slate-600 text-sm line-clamp-2">
                        {discussion.content}
                      </p>
                    </div>
                    <Badge variant="outline" className="ml-4">
                      {discussion.category}
                    </Badge>
                  </div>
                  
                  <div className="flex items-center justify-between">
                    <div className="flex items-center gap-4 text-sm text-slate-500">
                      <div className="flex items-center gap-1">
                        <MessageSquare className="w-4 h-4" />
                        {discussion.replies_count || 0} replies
                      </div>
                      <div className="flex items-center gap-1">
                        <Heart className="w-4 h-4" />
                        {discussion.likes_count || 0} likes
                      </div>
                      <span>by {discussion.author_name}</span>
                    </div>
                    
                    {discussion.tags && discussion.tags.length > 0 && (
                      <div className="flex gap-1">
                        {discussion.tags.slice(0, 3).map(tag => (
                          <Badge key={tag} variant="secondary" className="text-xs">
                            {tag}
                          </Badge>
                        ))}
                      </div>
                    )}
                  </div>
                </CardContent>
              </Card>
            </motion.div>
          ))}
          
          {filteredDiscussions.length === 0 && (
            <Card className="text-center py-12">
              <CardContent>
                <MessageCircle className="w-12 h-12 text-slate-400 mx-auto mb-4" />
                <h3 className="text-lg font-medium text-slate-600 mb-2">
                  {searchTerm || filterCategory !== 'all' 
                    ? "No discussions found" 
                    : "No discussions yet"}
                </h3>
                <p className="text-slate-500">
                  {searchTerm || filterCategory !== 'all'
                    ? "Try adjusting your search or filter"
                    : "Be the first to start a conversation!"}
                </p>
              </CardContent>
            </Card>
          )}
        </div>
      </div>
    </div>
  );
}